{
  "name": "mini-shell",
  "version": "1.5.7",
  "license": "Apache-2.0",
  "main": "dist-electron/main.js",
  "author": {
    "name": "caixue",
    "email": "caixue233@gmail.com"
  },
  "keywords": [
    "shell",
    "jinkens",
    "execute",
    "ssh",
    "cmd",
    "powershell",
    "terminal"
  ],
  "description": "A tool that can automate scripts (like jenkins).",
  "scripts": {
    "postinstall": "patch-package",
    "dev": "vite --host 0.0.0.0",
    "dev:f": "vite --force --host 0.0.0.0",
    "start": "vite --host 0.0.0.0",
    "build": "vite build",
    "build:p": "vite build && yarn package",
    "preview": "vite preview --host 0.0.0.0",
    "lint": "eslint --ext .js,.ts,.tsx,.vue ./src ./electron",
    "lint:fix": "eslint --fix --ext .js,.ts,.tsx,.vue ./src ./electron",
    "type": "vue-tsc --noEmit",
    "build-win": "electron-builder -w",
    "build-mac": "electron-builder",
    "release": "vite build && electron-builder build --win -p always",
    "release-mac": "vite build && electron-builder build --mac -p always"
  },
  "devDependencies": {
    "@element-plus/icons-vue": "^2.3.2",
    "@types/node": "^25.2.3",
    "@types/ssh2": "^1.15.5",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitejs/plugin-vue": "^5.0.5",
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/xterm": "^5.5.0",
    "code-inspector-plugin": "^0.20.9",
    "compare-versions": "^6.1.1",
    "dayjs": "^1.11.19",
    "electron": "^40.4.0",
    "electron-builder": "^26.7.0",
    "electron-updater": "^6.7.3",
    "element-plus": "^2.13.2",
    "eslint": "^8.57.0",
    "less": "^4.5.1",
    "normalize.css": "^8.0.1",
    "patch-package": "^8.0.1",
    "pinia": "^3.0.4",
    "terser": "^5.31.2",
    "tree-kill": "^1.2.2",
    "typescript": "^5.9.3",
    "unplugin-vue-components": "~0.27.5",
    "uuid": "^10.0.0",
    "vite": "^7.3.1",
    "vite-plugin-checker": "^0.12.0",
    "vite-plugin-electron": "^0.29.0",
    "vue": "^3.5.28",
    "vue-draggable-plus": "^0.6.1",
    "vue-eslint-parser": "^9.4.3",
    "vue-i18n": "^11.2.8",
    "vue-router": "^5.0.2",
    "vue-tsc": "^2.1.6",
    "zmodem.js": "^0.1.10"
  },
  "dependencies": {
    "iconv-lite": "^0.7.2",
    "ssh2": "^1.17.0"
  },
  "volta": {
    "node": "24.13.0"
  },
  "build": {
    "productName": "mini-shell",
    "files": [
      "dist",
      "dist-electron",
      "locales"
    ],
    "directories": {
      "output": "./out/installation_package"
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": false
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "category": "public.app-category.utilities"
    },
    "publish": {
      "provider": "github",
      "owner": "cx690",
      "private": false,
      "repo": "mini-shell",
      "releaseType": "release"
    }
  }
}
